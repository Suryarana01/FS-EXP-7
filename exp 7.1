import axios from "axios";

const API = axios.create({
  baseURL: process.env.REACT_APP_API_URL,
});

// Add JWT token to headers if available
API.interceptors.request.use((req) => {
  const token = localStorage.getItem("token");
  if (token) req.headers.Authorization = `Bearer ${token}`;
  return req;
});

export default API;
import React, { useState } from "react";
import API from "./api";

function App() {
  const [response, setResponse] = useState("");
  const [amount, setAmount] = useState("");

  const getBalance = async () => {
    try {
      const res = await API.get("/bank/balance");
      setResponse(JSON.stringify(res.data, null, 2));
    } catch (err) {
      setResponse(err.response?.data?.message || err.message);
    }
  };

  const deposit = async () => {
    try {
      const res = await API.post("/bank/deposit", { amount: Number(amount) });
      setResponse(JSON.stringify(res.data, null, 2));
    } catch (err) {
      setResponse(err.response?.data?.message || err.message);
    }
  };

  const withdraw = async () => {
    try {
      const res = await API.post("/bank/withdraw", { amount: Number(amount) });
      setResponse(JSON.stringify(res.data, null, 2));
    } catch (err) {
      setResponse(err.response?.data?.message || err.message);
    }
  };

  const login = async () => {
    try {
      const res = await API.post("/auth/login", {
        email: "mahak@example.com",
        password: "123456",
      });
      localStorage.setItem("token", res.data.token);
      setResponse("Login successful, token stored!");
    } catch (err) {
      setResponse(err.response?.data?.message || err.message);
    }
  };

  return (
    <div style={{ padding: "20px", fontFamily: "sans-serif" }}>
      <h1>üè¶ Banking Dashboard</h1>
      <button onClick={login}>Login</button>
      <div>
        <input
          type="number"
          value={amount}
          placeholder="Enter amount"
          onChange={(e) => setAmount(e.target.value)}
          style={{ marginRight: "10px" }}
        />
        <button onClick={deposit}>Deposit</button>
        <button onClick={withdraw}>Withdraw</button>
      </div>
      <button onClick={getBalance}>Check Balance</button>
      <pre style={{ background: "#eee", padding: "10px", marginTop: "10px" }}>
        {response}
      </pre>
    </div>
  );
}

export default App;
